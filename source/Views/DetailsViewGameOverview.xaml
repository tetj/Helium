<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                    mc:Ignorable="d">

    <Style TargetType="{x:Type DetailsViewGameOverview}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type DetailsViewGameOverview}">
                    <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                                  VerticalScrollBarVisibility="Auto"
                                  Style="{DynamicResource DetailsScrollViewer}"
                                  d:DesignWidth="1280"
                                  d:DesignHeight="1280"
                                  d:DataContext="{x:Static DesignMainViewModel.DesignSelectedGameDetailsIntance}"
                                  x:Name="PART_ScrollViewHost">
                        <Grid Margin="0,0,0,30">

                            <DockPanel>

                                <TabControl  x:Name="TabControl" Margin="0,0,0,0" Focusable="False">

                                    <!-- VIDEO -->
                                    <TabItem>
                                        <TabItem.Header>
                                            <TextBlock Text="Video" FontSize="{DynamicResource FontSizeLarger}" />
                                        </TabItem.Header>

                                        <DockPanel Margin="0,0,0,0">

                                            <!-- BACKGROUND IMAGE -->
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                <Grid Grid.Row="0" Height="{Binding ElementName=DetailsTop, Path=ActualHeight}"
                                      Name="BorderImageBackground">
                                                    <Grid.OpacityMask>
                                                        <LinearGradientBrush StartPoint="0.5, 0.0" EndPoint="0.5, 1.0" >
                                                            <GradientStop Color="Black" Offset="0.90"/>
                                                            <GradientStop Color="Transparent" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Grid.OpacityMask>
                                                    <Grid Background="#141414" Height="{Binding ElementName=DetailsTop, Path=ActualHeight}">
                                                        <Grid.Style>
                                                            <Style TargetType="Grid">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Settings DetailsVisibility.BackgroundImage}" Value="False">
                                                                        <Setter Property="Visibility" Value="Hidden"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Game.BackgroundImage}" Value="{x:Null}">
                                                                        <Setter Property="Visibility" Value="Hidden"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Grid.Style>
                                                    </Grid>
                                                    <Border>
                                                        <Border.Style>
                                                            <Style TargetType="{x:Type Border}">
                                                                <Setter Property="Visibility" Value="Visible" />
                                                                <Style.Triggers>
                                                                    <MultiDataTrigger>
                                                                        <MultiDataTrigger.Conditions>
                                                                            <Condition Binding="{PluginSettings Plugin=BackgroundChanger, Path=HasDataBackground, FallbackValue=False}" Value="True" />
                                                                            <Condition Binding="{PluginSettings Plugin=BackgroundChanger, Path=EnableBackgroundImage, FallbackValue=False}" Value="True" />
                                                                        </MultiDataTrigger.Conditions>
                                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                                    </MultiDataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                        <FadeImage x:Name="PART_ImageBackground" Stretch="UniformToFill"
                                                   HorizontalAlignment="{DynamicResource DetailsViewBackgroundHorizontalAlignment}"
                                                   VerticalAlignment="{DynamicResource DetailsViewBackgroundVerticalAlignment}">
                                                            <FadeImage.OpacityMask>
                                                                <LinearGradientBrush StartPoint="0.5, 0.0" EndPoint="0.5, 1.0" >
                                                                    <GradientStop Color="Black" Offset="0.75"/>
                                                                    <GradientStop Color="Transparent" Offset="1"/>
                                                                </LinearGradientBrush>
                                                            </FadeImage.OpacityMask>
                                                        </FadeImage>
                                                    </Border>

                                                    <!-- BackgroundChanger plugin background -->
                                                    <ContentControl x:Name="BackgroundChanger_PluginBackgroundImage"
                                                    HorizontalAlignment="{DynamicResource DetailsViewBackgroundHorizontalAlignment}"
                                                    VerticalAlignment="{DynamicResource DetailsViewBackgroundVerticalAlignment}" />
                                                </Grid>

                                                <!-- BUTTONS -->
                                                <DockPanel Margin="0,15,30,0" VerticalAlignment="Top" HorizontalAlignment="Right">
                                                    <!--GridConverterGridPanelCloseButton-->

                                                    <ContentControl x:Name="CheckLocalizations_PluginFlags" Height="30"
                                                            Margin="0,0,0,10"
                                                            Visibility="{PluginSettings Plugin=CheckLocalizations, Path=EnableIntegrationFlags, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                            Opacity="0.85" />
                                                </DockPanel>

                                                <!-- DETAILS -->
                                                <StackPanel Grid.Row="0" Name="DetailsTop" VerticalAlignment="Top">

                                                    <Grid Name="HeaderImagesGrid" Height="{Settings CalculatedGameDetailsIndentation}" MinHeight="310">

                                                        <!-- VIDEO PLAYER -->
                                                        <StackPanel Margin="-10,-10,0,0">
                                                            <Border Panel.ZIndex="99">
                                                                <Border.Style>
                                                                    <Style TargetType="Border">
                                                                        <Setter Property="Visibility" Value="Visible" />
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{PluginSettings Plugin=ExtraMetadataLoader, Path=EnableVideoPlayer, FallbackValue=False}" Value="False">
                                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Border.Style>
                                                                <ContentControl x:Name="ExtraMetadataLoader_VideoLoaderControlAlternative" Margin="10" HorizontalAlignment="Left"/>
                                                            </Border>

                                                            <!--ContentControl x:Name="ExtraMetadataLoader_LogoLoaderControl"
                                                        Margin="0,0,0,0"
                                                        Tag="{DynamicResource DetailsViewAllowUseOfLogos}" 
                                                        Style="{DynamicResource ControlPanelBoolTagToVisibility}"/-->

                                                        </StackPanel>

                                                        <!-- ICONS (on top of game name) -->
                                                        <StackPanel Margin="1,20,20,30" HorizontalAlignment="Left" VerticalAlignment="Bottom">
                                                            <!--<Image Name="PART_ImageIcon" MaxHeight="48" MaxWidth="48"
                                                   DockPanel.Dock="Left" Margin="0,0,20,0"
                                                   VerticalAlignment="Bottom"
                                                   RenderOptions.BitmapScalingMode="Fant" />-->



                                                            <DockPanel LastChildFill="False"  Margin="15,0,0,0">
                                                                <ContentControl x:Name="LibraryManagement_PluginFeaturesIconList" Height="30" Margin="0,0,20,0"
                                                            VerticalAlignment="Bottom" DockPanel.Dock="Left" Opacity="1"
                                                            Visibility="{PluginSettings Plugin=LibraryManagement, Path=EnableIntegrationFeatures, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                                    <ContentControl.Effect>
                                                                        <DropShadowEffect BlurRadius="5" RenderingBias="Performance"
                                                                      ShadowDepth="0" Color="DarkGray" />
                                                                    </ContentControl.Effect>
                                                                </ContentControl>

                                                                <ContentControl x:Name="LibraryManagement_PluginAgeRating" Height="30"
                                                Margin="15,75,0,0" Grid.Column="0" Grid.Row="1" 
                                                HorizontalAlignment="Left" VerticalAlignment="Top"/>
                                                            </DockPanel>

                                                            <!-- GAME NAME -->
                                                            <Border DockPanel.Dock="Left" Margin="20,0,0,0"
                                                    Tag="{DynamicResource DetailsViewDisplayGameNameIfLogoVisible}">
                                                                <Border.Style>
                                                                    <Style TargetType="Border">
                                                                        <Setter Property="Visibility" Value="Visible" />
                                                                        <Style.Triggers>
                                                                            <MultiDataTrigger>
                                                                                <MultiDataTrigger.Conditions>
                                                                                    <Condition Binding="{Binding Tag, RelativeSource={RelativeSource Self}, FallbackValue=False}" Value="False" />
                                                                                    <Condition Binding="{Binding ElementName=ExtraMetadataLoader_LogoLoaderControl, Path=Visibility, FallbackValue=Collapsed}" Value="Visible" />
                                                                                    <Condition Binding="{PluginSettings Plugin=ExtraMetadataLoader, Path=IsLogoAvailable, FallbackValue=False}" Value="True" />
                                                                                </MultiDataTrigger.Conditions>
                                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                                            </MultiDataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Border.Style>
                                                                <TextBlock FontFamily="{DynamicResource FontFamily}" Name="PART_TextDisplayName"
                                                       FontSize="{DynamicResource FontSizeLargest}"
                                                       FontWeight="Medium"
                                                       TextWrapping="Wrap" VerticalAlignment="Center" Foreground="White">
                                                                    <TextBlock.Effect>
                                                                        <DropShadowEffect Color="Black" ShadowDepth="0" Opacity="1"
                                                                          BlurRadius="10" Direction="0"
                                                                          RenderingBias="Performance" />
                                                                    </TextBlock.Effect>
                                                                </TextBlock>
                                                            </Border>
                                                        </StackPanel>

                                                        <!-- BUTTONS -->
                                                        <StackPanel Margin="1,20,20,30" HorizontalAlignment="Right" VerticalAlignment="Bottom">

                                                            <ContentControl x:Name="ScreenshotsVisualizer_PluginButton" Height="40" VerticalAlignment="Bottom" Margin="0,0,10,0" DockPanel.Dock="Left" 
                                                            Visibility="{PluginSettings Plugin=ScreenshotsVisualizer, Path=HasData, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                                            <ContentControl x:Name="SystemChecker_PluginButton" Height="40" VerticalAlignment="Bottom" Margin="0,0,10,0" DockPanel.Dock="Left" 
                                                            Visibility="{PluginSettings Plugin=SystemChecker, Path=EnableIntegrationButton, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                                            <ContentControl x:Name="CheckLocalizations_PluginButton" Height="40" VerticalAlignment="Bottom" Margin="0,0,10,0" DockPanel.Dock="Left" 
                                                            Visibility="{PluginSettings Plugin=CheckLocalizations, Path=EnableIntegrationButton, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                                            <ContentControl x:Name="CheckDlc_PluginButton" Height="40" VerticalAlignment="Bottom" Margin="0,0,10,0" DockPanel.Dock="Left" 
                                                            Visibility="{PluginSettings Plugin=CheckDlc, Path=EnableIntegrationButton, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}" 
                                                                />
                                                        </StackPanel>

                                                        <!-- PLAYERS IN GAME -->
                                                        <StackPanel Margin="120,0,0,7" VerticalAlignment="Bottom">


                                                            <Border Margin="0,10,0,0"
                                                    Background="{DynamicResource DetailsViewBannerPanelBackgroundBrush}"
                                                    BorderBrush="{DynamicResource DetailsViewBannerPanelBorderBrush}"
                                                    BorderThickness="1"
                                                    Visibility="{PluginSettings Plugin=GogSecondClassWatcher, Path=IsControlVisible, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                                <ContentControl x:Name="GogSecondClassWatcher_SecondClassWatcherControl" />
                                                            </Border>


                                                            <ContentControl x:Name="NewsViewer_PlayersInGameViewerControl" VerticalAlignment="Bottom">
                                                                <ContentControl.Resources>
                                                                    <Style TargetType="Button" BasedOn="{StaticResource PlayersCountButtonStyle}" />
                                                                </ContentControl.Resources>
                                                                <Style TargetType="Button" BasedOn="{StaticResource PlayersCountButtonStyle}" />
                                                            </ContentControl>
                                                        </StackPanel>

                                                        <!-- DUPLICATE HIDER ICONS -->
                                                        <StackPanel Margin="20,0,50,5"
                                                    HorizontalAlignment="Left" VerticalAlignment="Bottom">

                                                            <ContentControl x:Name="DuplicateHider_SourceSelector"
                                                        HorizontalAlignment="Left" VerticalAlignment="Bottom"
                                                        VerticalContentAlignment="Center"
                                                        Height="24"
                                                        RenderOptions.BitmapScalingMode="Fant" />
                                                        </StackPanel>

                                                    </Grid>

                                                    <!-- PLAY button + LAST PLAYED + TIME PLAYED + COMPLETION STATUS mettre plus compacte encore !-->
                                                    <Grid Name="DetailsHeader">
                                                        <Border Height="{Binding ElementName=DetailsHeader, Path=Height}" ClipToBounds="True">
                                                            <Border.CacheMode>
                                                                <BitmapCache EnableClearType="False" RenderAtScale="0.125"
                                                             SnapsToDevicePixels="False" />
                                                            </Border.CacheMode>
                                                            <Border.Background>
                                                                <VisualBrush Visual="{Binding ElementName=BorderImageBackground}" Stretch="None" AlignmentY="Bottom"/>
                                                            </Border.Background>
                                                            <Border.Effect>
                                                                <BlurEffect Radius="24" KernelType="Gaussian" RenderingBias="Performance"/>
                                                            </Border.Effect>
                                                        </Border>
                                                        <Border Background="{DynamicResource BackdropGlass1}"/>
                                                        <Border Padding="20,10,30,10" x:Name="HeaderRow" Background="{DynamicResource DetailsSectionBackgroundBrush}">
                                                            <DockPanel>
                                                                <DockPanel.Resources>
                                                                    <Style x:Key="RoundedProgressBar" TargetType="ProgressBar">
                                                                        <Setter Property="Background" Value="#151619" />
                                                                        <Setter Property="Foreground" Value="#2d73ff" />
                                                                        <Setter Property="BorderThickness" Value="{DynamicResource ControlBorderThickness}"/>
                                                                        <Setter Property="Template">
                                                                            <Setter.Value>
                                                                                <ControlTemplate TargetType="{x:Type ProgressBar}">
                                                                                    <Border BorderThickness="{TemplateBinding BorderThickness}"
								                                            CornerRadius="{DynamicResource ControlCornerRadius}">
                                                                                        <Grid SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}">
                                                                                            <Rectangle Fill="{TemplateBinding Background}" RadiusY="4" RadiusX="4"/>
                                                                                            <Rectangle x:Name="PART_Track" Margin="0" RadiusY="4" RadiusX="4"/>
                                                                                            <Decorator x:Name="PART_Indicator" HorizontalAlignment="Left" VerticalAlignment="Stretch">
                                                                                                <Grid>
                                                                                                    <Rectangle Fill="{TemplateBinding Foreground}" RadiusY="4" RadiusX="4"/>
                                                                                                </Grid>
                                                                                            </Decorator>
                                                                                        </Grid>
                                                                                    </Border>
                                                                                </ControlTemplate>
                                                                            </Setter.Value>
                                                                        </Setter>
                                                                    </Style>
                                                                </DockPanel.Resources>
                                                                <DockPanel HorizontalAlignment="Left"  VerticalAlignment="Center"
                                                           Margin="0,0,10,0" DockPanel.Dock="Left">
                                                                    <Button Name="PART_ButtonPlayAction" Style="{DynamicResource PlayButton}" />
                                                                    <Button Name="PART_ButtonContextAction" Style="{DynamicResource ContextButton}" />
                                                                    <Button Name="PART_ButtonMoreActions" Style="{DynamicResource MoreActionsButton}"/>
                                                                </DockPanel>



                                                                <DockPanel DockPanel.Dock="Right" VerticalAlignment="Center" Margin="0,0,0,0">
                                                                    <ContentControl x:Name="PlayState_GameStateSwitchControl" Margin="10,0,0,0"
                                                                    Visibility="{PluginSettings Plugin=PlayState, Path=IsControlVisible, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                                        <ContentControl.Resources>
                                                                            <Style TargetType="Button" BasedOn="{StaticResource DetailsSemiTransparentButton}" >
                                                                                <Setter Property="Width" Value="32" />
                                                                                <Setter Property="Height" Value="32" />
                                                                            </Style>
                                                                        </ContentControl.Resources>
                                                                    </ContentControl>
                                                                    <Button x:Name="PART_ButtonEditGame" Focusable="False" Height="32" Width="32"
                                                            Style="{StaticResource DetailsViewEditButton}" Margin="10,0,0,0"/>
                                                                    <ToggleButton Name="PanelToggleButton" Margin="10,0,0,0" Focusable="False" Height="32" Width="32" Style="{DynamicResource PannelToggleButton}" IsChecked="{DynamicResource DetailsViewShowInfoPanelDefault}"/>
                                                                    <ToggleButton Name="GameFavoriteToggleButton" Margin="10,0,0,0" Focusable="False" Height="32" Width="32" Style="{DynamicResource PannelFavoriteToggleButton}"
                                                                  Visibility="{PluginStatus Plugin=felixkmh_Extras_Plugin}"
                                                                  IsChecked="{PluginSettings Plugin=ThemeExtras, Path=Game.Favorite, Mode=TwoWay, FallbackValue={StaticResource False}}"/>
                                                                </DockPanel>

                                                                <StackPanel Margin="20,0,0,0" VerticalAlignment="Center"
                                                            Style="{DynamicResource PluginStackpanelVisibility}"
                                                            Tag="{PluginSettings Plugin=SteamGameStatusDetector, Path=HasData, FallbackValue=False}">
                                                                    <Label Content="{PluginSettings Plugin=SteamGameStatusDetector, Path=AppState, FallbackValue='-'}" Style="{DynamicResource HeaderLabel}"/>
                                                                    <ProgressBar FontSize="10" Margin="0,0,0,0" HorizontalAlignment="Left"
                                                                 Maximum="{PluginSettings Plugin=SteamGameStatusDetector, Path=BytesToDownload, FallbackValue=1}"
                                                                 Value="{PluginSettings Plugin=SteamGameStatusDetector, Path=BytesDownloaded, FallbackValue=0}"
                                                                 Width="75" Height="6" Style="{DynamicResource RoundedProgressBar}" />

                                                                    <TextBlock Text="{PluginSettings Plugin=SteamGameStatusDetector, Path=DownloadProgress, FallbackValue='-'}"
                                                               Style="{DynamicResource HeaderTextBlock}"/>
                                                                </StackPanel>

                                                                <DockPanel x:Name="PART_ElemLastPlayed" DockPanel.Dock="Left" VerticalAlignment="Center" Margin="20,0,0,0">
                                                                    <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,0,0,0">
                                                                        <Label Style="{DynamicResource HeaderLabel}" Content="{DynamicResource LOCLastPlayed}"/>
                                                                        <TextBlock x:Name="PART_TextLastActivity" Style="{DynamicResource HeaderTextBlock}"/>
                                                                    </StackPanel>
                                                                </DockPanel>

                                                                <DockPanel x:Name="PART_ElemPlayTime" DockPanel.Dock="Left" VerticalAlignment="Center" Margin="20,0,0,0">

                                                                    <Viewbox Height="25">
                                                                        <Canvas Width="256" Height="256" Canvas.Left="0" Canvas.Top="0">
                                                                            <Canvas.RenderTransform>
                                                                                <TranslateTransform X="0" Y="0"/>
                                                                            </Canvas.RenderTransform>
                                                                            <Canvas.Resources/>
                                                                            <Polyline Points="85.5,149.167 128,128 128,55.167 " FillRule="NonZero" StrokeThickness="16" Stroke="{DynamicResource DetailsViewHeaderIconsFillBrush}" StrokeMiterLimit="10" StrokeLineJoin="Round" StrokeStartLineCap="Round" StrokeEndLineCap="Round"/>
                                                                            <Path StrokeThickness="16" Stroke="{DynamicResource DetailsViewHeaderIconsFillBrush}" StrokeMiterLimit="10" StrokeLineJoin="Round" StrokeStartLineCap="Round" StrokeEndLineCap="Round">
                                                                                <Path.Data>
                                                                                    <PathGeometry Figures="M128 17.5c61.027 0 110.5 49.473 110.5 110.5S189.027 238.5 128 238.5S17.5 189.027 17.5 128" FillRule="NonZero"/>
                                                                                </Path.Data>
                                                                            </Path>
                                                                            <Ellipse Canvas.Left="20.9" Canvas.Top="80.3" Width="11" Height="11" Fill="{DynamicResource DetailsViewHeaderIconsFillBrush}" StrokeThickness="7" Stroke="{DynamicResource DetailsViewHeaderIconsFillBrush}" StrokeMiterLimit="10" StrokeLineJoin="Round" StrokeStartLineCap="Round" StrokeEndLineCap="Round"/>
                                                                            <Ellipse Canvas.Left="44.7" Canvas.Top="45" Width="11" Height="11" Fill="{DynamicResource DetailsViewHeaderIconsFillBrush}" StrokeThickness="7" Stroke="{DynamicResource DetailsViewHeaderIconsFillBrush}" StrokeMiterLimit="10" StrokeLineJoin="Round" StrokeStartLineCap="Round" StrokeEndLineCap="Round"/>
                                                                            <Ellipse Canvas.Left="80.5" Canvas.Top="21.2" Width="11" Height="11" Fill="{DynamicResource DetailsViewHeaderIconsFillBrush}" StrokeThickness="7" Stroke="{DynamicResource DetailsViewHeaderIconsFillBrush}" StrokeMiterLimit="10" StrokeLineJoin="Round" StrokeStartLineCap="Round" StrokeEndLineCap="Round"/>
                                                                        </Canvas>
                                                                    </Viewbox>
                                                                    <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,0,0,0">
                                                                        <Label Style="{DynamicResource HeaderLabel}" Content="{DynamicResource LOCTimePlayed}"/>
                                                                        <TextBlock x:Name="PART_TextPlayTime" Style="{DynamicResource HeaderTextBlock}"/>
                                                                    </StackPanel>
                                                                </DockPanel>

                                                                <!-- COMPLETION STATUS -->
                                                                <StackPanel DockPanel.Dock="Left" VerticalAlignment="Center" Margin="20,0,0,0">
                                                                    <StackPanel.Style>
                                                                        <Style TargetType="StackPanel">
                                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                                            <Style.Triggers>
                                                                                <DataTrigger Binding="{Binding ElementName=PART_ButtonCompletionStatus, Path=Visibility}" Value="Visible">
                                                                                    <Setter Property="Visibility" Value="Visible" />
                                                                                </DataTrigger>
                                                                                <DataTrigger Binding="{Binding ElementName=ThemeExtras_SettableCompletionStatus, Path=Visibility}" Value="Visible">
                                                                                    <Setter Property="Visibility" Value="Visible" />
                                                                                </DataTrigger>
                                                                                <DataTrigger Binding="{Settings DetailsVisibility.CompletionStatus}" Value="False">
                                                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                                                </DataTrigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </StackPanel.Style>

                                                                    <Label Style="{DynamicResource HeaderLabel}" Content="{DynamicResource LOCCompletionStatus}"/>
                                                                    <Border Tag="{PluginStatus Plugin=felixkmh_Extras_Plugin, Status=Installed}"
                                                            Visibility="{Binding RelativeSource={RelativeSource Self}, Path=Tag, Converter={StaticResource InvertedBooleanToVisibilityConverter}}">
                                                                        <Button Name="PART_ButtonCompletionStatus" Style="{StaticResource PropertyItemButton}" Margin="0" />
                                                                    </Border>

                                                                    <ContentControl Visibility="{PluginStatus Plugin=felixkmh_Extras_Plugin, Status=Installed}"
                                                                        x:Name="ThemeExtras_SettableCompletionStatus">
                                                                        <ContentControl.Resources>
                                                                            <Style TargetType="UserControl" BasedOn="{StaticResource ThemeExtrasUserControlCompStatusStyle}" />
                                                                        </ContentControl.Resources>
                                                                    </ContentControl>
                                                                </StackPanel>


                                                                <!-- SUCCESS STORY ACHIEVEMENTS-->
                                                                <DockPanel DockPanel.Dock="Left" VerticalAlignment="Center" Margin="20,0,0,0"
                                                           Visibility="{PluginSettings Plugin=SuccessStory, Path=HasData, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                                    <Viewbox Stretch="Uniform" Height="35">
                                                                        <Viewbox.Style>
                                                                            <Style TargetType="{x:Type Viewbox}">
                                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                                                <Style.Triggers>
                                                                                    <DataTrigger Binding="{PluginSettings Plugin=SuccessStory, Path=Is100Percent, FallbackValue=False}" Value="True">
                                                                                        <Setter Property="Visibility" Value="Visible" />
                                                                                    </DataTrigger>
                                                                                </Style.Triggers>
                                                                            </Style>
                                                                        </Viewbox.Style>
                                                                        <Canvas Width="256" Height="256" Canvas.Left="0" Canvas.Top="0">
                                                                            <Canvas.RenderTransform>
                                                                                <TranslateTransform X="0" Y="0"/>
                                                                            </Canvas.RenderTransform>
                                                                            <Canvas.Resources/>
                                                                            <Polyline Points="111.689,174.543 97.276,245.256 78.612,208.64 41.298,217.794 66.575,149.584" FillRule="NonZero" Fill="#66B9FF" StrokeThickness="10" Stroke="#226296" StrokeMiterLimit="10" StrokeLineJoin="Round"/>
                                                                            <Polyline Points="189.403,149.584 214.68,217.794 177.359,208.64 158.701,245.256 144.289,174.544" FillRule="NonZero" Fill="#66B9FF" StrokeThickness="10" Stroke="#226296" StrokeMiterLimit="10" StrokeLineJoin="Round"/>
                                                                            <Polygon Points="108.668,171.035 81.336,179.573 75.21,152.086 47.185,146.07 55.893,119.256 34.693,100.302 55.893,81.349 47.185,54.533 75.21,48.52 81.343,21.031 108.668,29.567 127.985,8.766 147.304,29.567 174.636,21.031 180.768,48.52 208.787,54.533 200.078,81.349 221.285,100.302 200.086,119.256 208.787,146.072 180.768,152.086 174.636,179.573 147.311,171.035 127.992,191.84" FillRule="NonZero" Fill="#66B9FF" StrokeThickness="10" Stroke="#226296" StrokeMiterLimit="10" StrokeLineJoin="Round"/>
                                                                            <Path Fill="#FFD000" StrokeThickness="6" Stroke="#FF9100" StrokeMiterLimit="10">
                                                                                <Path.Data>
                                                                                    <PathGeometry Figures="M127.985 45.378 c30.868 0 55.979 24.638 55.979 54.923c0 30.282-25.111 54.924-55.979 54.924c-30.862 0-55.978-24.642-55.978-54.924 C72.007 70.017 97.124 45.378 127.985 45.378" FillRule="NonZero"/>
                                                                                </Path.Data>
                                                                            </Path>
                                                                        </Canvas>
                                                                    </Viewbox>

                                                                    <Viewbox Stretch="Uniform" Height="35">
                                                                        <Viewbox.Style>
                                                                            <Style TargetType="{x:Type Viewbox}">
                                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                                                <Style.Triggers>
                                                                                    <DataTrigger Binding="{PluginSettings Plugin=SuccessStory, Path=Is100Percent, FallbackValue={x:Null}}" Value="False">
                                                                                        <Setter Property="Visibility" Value="Visible" />
                                                                                    </DataTrigger>
                                                                                </Style.Triggers>
                                                                            </Style>
                                                                        </Viewbox.Style>
                                                                        <Canvas Width="256" Height="256" Canvas.Left="0" Canvas.Top="0">
                                                                            <Canvas.RenderTransform>
                                                                                <TranslateTransform X="0" Y="0"/>
                                                                            </Canvas.RenderTransform>
                                                                            <Canvas.Resources/>
                                                                            <Polyline Points="111.689,174.543 97.276,245.256 78.612,208.64 41.298,217.794 66.575,149.584 " FillRule="NonZero" StrokeThickness="10" Stroke="{DynamicResource DetailsViewHeaderIconsFillBrush}" StrokeMiterLimit="10" StrokeLineJoin="Round"/>
                                                                            <Polyline Points="189.403,149.584 214.68,217.794 177.359,208.64 158.701,245.256 144.289,174.544 " FillRule="NonZero" StrokeThickness="10" Stroke="{DynamicResource DetailsViewHeaderIconsFillBrush}" StrokeMiterLimit="10" StrokeLineJoin="Round"/>
                                                                            <Polygon Points="108.668,171.035 81.336,179.573 75.21,152.086 47.185,146.07 55.893,119.256 34.693,100.302 55.893,81.349 47.185,54.533 75.21,48.52 81.343,21.031 108.668,29.567 127.985,8.766 147.304,29.567 174.636,21.031 180.768,48.52 208.787,54.533 200.078,81.349 221.285,100.302 200.086,119.256 208.787,146.072 180.768,152.086 174.636,179.573 147.311,171.035 127.992,191.84 " FillRule="NonZero" StrokeThickness="10" Stroke="{DynamicResource DetailsViewHeaderIconsFillBrush}" StrokeMiterLimit="10" StrokeLineJoin="Round"/>
